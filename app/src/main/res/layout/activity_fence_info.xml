<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wt_green"
    tools:context=".BuildingInfoActivity">

    <TextView
        android:id="@+id/buildingNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Chicago Theater"
        android:textAlignment="center"
        android:textColor="#BFDDBE"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/buildingPhotoIV"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buildingNameTV"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/buildingAddressTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="175 N State, Chicago, IL"
        android:textAlignment="center"
        android:textColor="#BFDDBE"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/buildingPhotoIV"
        app:layout_constraintStart_toStartOf="@+id/buildingPhotoIV"
        app:layout_constraintTop_toBottomOf="@+id/buildingPhotoIV" />

    <TextView
        android:id="@+id/buildingDescriptionTV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="#AEE4CB"
        android:padding="4dp"
        android:scrollbars="vertical"
        android:text="TextView"
        android:textColor="@color/wt_green2"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buildingPhotoIV"
        app:layout_constraintStart_toStartOf="@+id/buildingPhotoIV"
        app:layout_constraintTop_toBottomOf="@+id/buildingAddressTV" />

</androidx.constraintlayout.widget.ConstraintLayout>